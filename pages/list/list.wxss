/* pages/list/list.wxss */

.date-item {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-bottom: 3rpx solid rgba(0, 0, 0, 0.1);
}

.date-item:last-child {
  border-bottom: none;
}

.day {
  font-size: 40rpx;
  line-height: 56rpx;
}

.date {
  font-size: 25rpx;
  line-height: 35rpx;
  text-align: center;
  opacity: 0.5;
}

.temp {
  font-size: 40rpx;
  line-height: 56rpx;
  flex-grow: 1; 
  text-align: center;
  opacity: 0.8;
}

.weather-icon {
  width: 90rpx;
  height: 90rpx;
}